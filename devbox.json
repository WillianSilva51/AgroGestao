{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    "python@3.13.0",
    "postgresql@latest",
    "libpq@latest",
    "pkg-config@latest"
  ],
  "env": {
    "LD_LIBRARY_PATH": "$PWD/.devbox/nix/profile/default/lib"
  },
  "shell": {
    "init_hook": [
      "if [ -f .venv/bin/activate ]; then . .venv/bin/activate; else python -m venv .venv && . .venv/bin/activate; fi",
      "python -m ensurepip --upgrade",
      "python -m pip install --upgrade pip",
      "if [ -f requirements.txt ]; then python -m pip install -r requirements.txt > /dev/null 2>&1 && echo \"Dependencies check passed\"; fi"
    ],
    "scripts": {
      "run": "panel serve Dashboard.ipynb --autoreload --show",
      "db:reset": "python -m src.init_db",
      "db:access": "psql $DATABASE_URL"
    }
  }
}